# -*-Shell-script-*-
#
# Tip script library
#

get_current_branch() {
    git-branch | grep "*" | cut -c3-
}

get_auto_branches() {

    git-ls-tree  tip -- .tip/auto-branches/ | sed "s@.*tip/auto-branches/@@"
}

get_topic_branches() {
    git-branch | grep -vE 'linus|tmp|auto-' | cut -c3-
}

check_master() {
    local CB=`get_current_branch`
    if [ "$CB" != "master" ]
    then
	echo "Check out master branch first"
	exit 1;
    fi
    quilt top 2>/dev/null && { echo "quilt patches still applied!"; exit -1; }
}

abort_merge() {
    echo "merge aborted manually!";
    git-reset --hard;
    git-checkout master; 
    exit -1;
}
