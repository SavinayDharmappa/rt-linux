#!/bin/sh
#
# Sync all branches to the kernel.org repository
#

. ~/bin/tip/tip-lib

check_master

git-pull || exit 1;

AB=`get_auto_branches`
BS=`git branch | sed "s/\* //"`

for B in $BS
do
    # Do not touch the local linus branch
    if [ "linus" == "$B" ]
    then 
	echo "Skipping branch $B"
    	continue;
    fi

    # Exclude autogenerated branches
    EXP=1
    for A in $AB
    do
	if [ "$A" == "$B" ]
	then 
	    EXP=0; 
	    break;
	fi
    done

    if [ $EXP -eq 0 ]
    then
	echo "Skipping autogenerated branch $B"
	continue;
    fi

    echo "Updating $B"
    git-checkout $B
    git-merge origin/$B
done

# switch back to master again
git-checkout master
