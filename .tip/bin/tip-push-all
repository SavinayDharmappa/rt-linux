#!/bin/bash

#
# Push all branches to the kernel.org repository
#

#. ~/bin/tip/tip-lib

AUTO_BRANCHES=$(tip-auto-branches)
TOPIC_BRANCHES=$(tip-topic-branches)

echo "pushing: "$TOPIC_BRANCHES
git-push origin $TOPIC_BRANCHES || { echo error; exit 1; }

echo "force-pushing: "$AUTO_BRANCHES
git-push -f origin master $AUTO_BRANCHES || { echo error; exit 1; }

git-push --tags

